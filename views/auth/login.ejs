<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/validate.css">
</head>

<body>
<div class="auth-wrapper align-items-stretch aut-bg-img">
  <div class="flex-grow-1">
    <div class="h-100 d-md-flex align-items-center auth-side-img">
      <div class="col-sm-10 auth-content w-auto">
        <h1 class="text-white my-4">Welcome Back!</h1>
        <h4 class="text-white font-weight-normal">Signin to your account and get explore the Finance system</h4>
      </div>
    </div>
    <div class="auth-side-form">
      <div class=" auth-content">
        <% if(errorMessage) { %>
          <div class="form-group mb-3">
            <span class="field-validation-error"><%= errorMessage %></span>
          </div>
        <% } %>
          <% if(successMessage) { %>
            <div class="form-group mb-3">
              <span class="text-c-blue"><%= successMessage %></span>
            </div>
          <% } %>
        <h3 class="mb-4 f-w-400">Login</h3>
        <form action="/login" method="post">
          <div class="form-group mb-3">
            <label class="floating-label" for="Email">Email address</label>
            <input type="text"
                   class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'input-validation-error' : '' %>"
                   id="Email"
                   value="<%= oldInput.email %>"
                   name="email"
                   required>
          </div>
          <div class="form-group mb-4">
            <label class="floating-label" for="Password">Password</label>
            <input type="password"
                   class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'input-validation-error' : '' %>"
                   id="Password"
                   value="<%= oldInput.password %>"
                   name="password"
                   required>
          </div>
          <div class="custom-control custom-checkbox text-left mb-4 mt-2">
            <input type="checkbox" class="custom-control-input" id="customCheck1">
            <label class="custom-control-label" for="customCheck1">Save credentials.</label>
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button class="btn btn-block btn-primary mb-4" type="submit">Login</button>
        </form>
        <div class="text-center">
          <div class="saprator my-4"><span>OR</span></div>
          <a class="btn text-white bg-facebook mb-2 mr-2  wid-40 px-0 hei-40 rounded-circle" href="/auth/facebook"><i
                    class="fab fa-facebook-f"></i></a>
          <a class="btn text-white bg-googleplus mb-2 mr-2 wid-40 px-0 hei-40 rounded-circle" href="/auth/google"><i
                    class="fab fa-google-plus-g"></i></a>
          <button class="btn text-white bg-twitter mb-2  wid-40 px-0 hei-40 rounded-circle"><i
                    class="fab fa-twitter"></i></button>
          <p class="mb-2 mt-4 text-muted">Forgot password? <a href="/reset" class="f-w-400">Reset</a>
          </p>
          <p class="mb-0 text-muted">Donâ€™t have an account? <a href="/signup" class="f-w-400">Signup</a></p>

        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../includes/script.ejs') %>
<%- include('../includes/end.ejs') %>
